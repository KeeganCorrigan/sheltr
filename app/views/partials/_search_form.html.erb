<div class="search-form">
  <h1 class="heading-with-margin"><%= t(".step_1") %></h1>


  <h2><%= t(".step_1_text") %></h2>

  <%= form_tag("/search", method: "get", class: "search") do %>
    <%= text_field_tag :q, nil, value: request.location.city, class:"search-input"  %>
    <br>
    <br>
    <h1 class="m0"><%= t(".step_2") %></h1>

    <div class="button-container">
      <%= button_tag :submit, name: "subaction", value: "homeless_shelter", class:"btn btn-primary submit-button night-shelter" do %>
        <i class="fas fa-bed m0"></i>
        <p class="m0 submit-text"><%= t(".sleep") %></p>
      <% end %>

      <%= button_tag :submit, name: "subaction", value: "library",class:"btn btn-primary submit-button day-shelter" do %>
        <i class="fas fa-wifi m0"></i>
        <p class="m0 submit-text"><%= t(".stay") %></p>
      <% end %>

      <%= button_tag :submit, name: "subaction", value: "food+for+homeless", class:"btn btn-primary submit-button food" do %>
        <i class="fas fa-utensils m0"></i>
        <p class="m0 submit-text"><%= t(".food") %></p>
      <% end %>

      <%= button_tag :submit, name: "subaction", value: "crisis+service", class:"btn btn-primary submit-button crisis-service" do %>
        <i class="fas fa-hands-helping"></i>
        <p class="m0 submit-text"><%= t(".talk") %></p>
      <% end %>
    </div>
  <% end %>
</div>
